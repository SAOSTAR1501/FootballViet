<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/history_booking_stadium_shape">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cimProfile"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_app"
        app:civ_border_color="#FF000000"
        app:civ_border_width="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="6dp">
        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung lịch sử đặt ở đây"
            android:textSize="@dimen/_12sdp"/>
        <TextView
            android:id="@+id/txtKhungGio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khung giờ:"/>
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian: "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy đặt"
                android:layout_marginLeft="50dp"/>

            <Button
                android:id="@+id/btnReBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt lại"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>