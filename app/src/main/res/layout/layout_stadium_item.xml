<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtUserName"
        android:text="Tên chủ sân"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_17sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Sân:"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txtTenSan"
            android:text="Minh Khai"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Địa chỉ:"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txtDiaChi"
            android:text="Bắc Từ Liêm"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Giá:"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txtGia"
            android:text="600000đ"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgAnhSan"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnDatSan"
        android:text="Đặt sân ngay"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#4CAF50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:background="#A19E9E"/>

</LinearLayout>