<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_shadow"
    android:padding="10dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtUserName"
            android:text="Tên chủ sân"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>

        <TextView
            android:id="@+id/txtGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_rounded_shadow"
            android:backgroundTint="@android:color/holo_orange_light"
            android:padding="6dp"
            android:text="600000đ"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTenSan"
            android:text="Minh Khai"
            android:layout_width="match_parent"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:textStyle="bold|italic"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_location"/>

        <TextView
            android:id="@+id/txtDiaChi"
            android:text="Bắc Từ Liêm"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgAnhSan"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnDatSan"
        android:text="Đặt sân ngay"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#4CAF50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>