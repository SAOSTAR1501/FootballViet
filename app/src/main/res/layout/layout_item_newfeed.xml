<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_shadow"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvUserName"
            android:text="Username:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tvGio"
            android:text="minh quoc"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:backgroundTint="@color/dot_light_screen4"
            android:background="@drawable/bg_rounded_shadow"
            android:padding="4dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tvNgay"
            android:text="gio"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:backgroundTint="@color/dot_dark_screen1"
            android:background="@drawable/bg_rounded_shadow"
            android:padding="4dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_team"/>
        <TextView
            android:id="@+id/tvTenDoi"
            android:text="minh quoc"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:gravity="left|center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_location"/>
        <TextView
            android:id="@+id/tvSan"
            android:text="minh quoc"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:gravity="center|left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNoiDung"
            android:text="minh quoc"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imgAnhDoi"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnNhanTin"
        android:text="Nháº¯n tin"
        android:textSize="@dimen/_15sdp"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#4CAF50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>